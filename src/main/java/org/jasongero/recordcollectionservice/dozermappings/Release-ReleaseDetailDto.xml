    </field>
    <field>
      <a>trackNumber</a>
      <b is-accessible="true">trackNumber</b>
    </field>
    <field>
      <a>duration</a>
      <b is-accessible="true">duration</b>
    </field>
  </mapping>
  
  <mapping>
    <class-a>org.jasongero.recordcollectionservice.entity.Format</class-a>
    <class-b>org.jasongero.recordcollectionservice.dto.ReleaseDetailDto.FormatDto</class-b>   
    <field>
      <a>formatName</a>
      <b is-accessible="true">formatName</b>
    </field>
    <field>
      <a>quantity</a>
      <b is-accessible="true">quantity</b>
    </field>
    <field>
      <a>notes</a>
      <b is-accessible="true">notes</b>
    </field>
